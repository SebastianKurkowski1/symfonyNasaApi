{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="formContainer">
        <h1 class="formHeader">Rejestracja</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div class="webflow-style-input">
            <label>
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
            </label>
        </div>

        <div class="webflow-style-input">
            <label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Hasło'}}) }}
            </label>
        </div>
        <button type="submit" class="button">Zarejestruj się</button>
        <a href="{{ path('app_login') }}">Logowanie</a>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
